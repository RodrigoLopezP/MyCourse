@model HomeViewModel
<div class="jumbotron">
    <h1 class="display-4">Benvenuto su MyCourse!</h1>
    <div class="row">
        <div class="col-md-7">
            <p class="lead d-flex align-items-center">Siamo tipo Udemy però più brutto!<br>Ti invitiamo a seguire i
                nostri corsi, grazie ai quali imparerai un sacco di cose! Ad esempio, lo sapevi che in termi di
                ibridazione Vaporeon è . . .</p>

        </div>
    </div>
    <hr class="my-4">
    <p><a asp-controller="Courses" asp-action="Index" class="btn btn-primary"> Sfoglia il catalogo dei nostri corsi <i
                class="fab fa-accessible-icon"></i></a></p>
    <p></p>
</div>
<section>
    <h2>Aggiunti di recente</h2>
    @foreach (CourseViewModel course in Model.MostRecentCourses)
    {
        <hr>
        <div class="row course">
            <div class="col-md-1">
                <img class="img-fluid" src="@course.ImagePath" height="60" alt="Img corso 1">
            </div>
            <div class="col-md-5">
                <h2>@course.Title</h2>
                <author>di @course.Author</author>
            </div>
            <div class="col-md-2 rating" title="@course.Rating">
                <rating value="@course.Rating"> </rating>
            </div>
            <div class="col-md-2 price">
                <price full-price="@course.FullPrice" current-price="@course.CurrentPrice"></price>
            </div>
            <div class="col-md-2">
                <a class="btn btn-outline-primary" asp-controller="Courses" asp-action="Detail" asp-route-id="@course.Id">
                    Dettaglio</a>
            </div>
        </div>
        <hr>
    }

</section>



<section>
    <h2>Più votati</h2>
    @foreach (CourseViewModel course in Model.BestRatingCourses)
    {
        <hr>
        <div class="row course">
            <div class="col-md-1">
                <img class="img-fluid" src="@course.ImagePath" height="60" alt="Img corso 1">
            </div>
            <div class="col-md-5">
                <h2>@course.Title</h2>
                <author>di @course.Author</author>
            </div>
            <div class="col-md-2 rating" title="@course.Rating">
                <rating value="@course.Rating"> </rating>
            </div>
            <div class="col-md-2 price">
                <price full-price="@course.FullPrice" current-price="@course.CurrentPrice"></price>
            </div>
            <div class="col-md-2">
                <a class="btn btn-outline-primary" asp-controller="Courses" asp-action="Detail" asp-route-id="@course.Id">
                    Dettaglio</a>
            </div>
        </div>
        <hr>
    }
</section>