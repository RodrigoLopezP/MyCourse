@model CourseCreateInputModel
<h1>@ViewBag.Title</h1>
<form method="post"> <!--mettendo method post, nel controller Courses Create li diciamo che Ã¨ di tipo HTTP POST-->
    <div class="row">
        <div class="col-12">
            <div asp-validation-summary="All"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <!---nel tag asp for viene inserito il valore nel model scritto sopra-->
            <input class="form-control form-control-lg" asp-for="Title" type="text" placeholder="Scrivi nome del corso qui">
              <span asp-validation-for="Title"></span>
        </div>
        <div class="col-md-4">
            <button class="btn btn-primary" type="submit"><i class="far fa-plus-square"></i> Crea</button>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_Validation"></partial>
}