@model CourseDetailViewModel
@inject IAuthorizationService authService
@{
    //dando lo user e il nome della policy, controlla se rispetta la policy
    //Model - Authorization - CourseAuthorRequirementHandler
    AuthorizationResult authorizationResult = await authService.AuthorizeAsync(User, nameof(Policy.CourseAuthor));
    bool canEdit = authorizationResult.Succeeded;

    AuthorizationResult courseSubscriberResult = await authService.AuthorizeAsync(User, nameof(Policy.CourseSubscriber));
    bool isSubscribed = courseSubscriberResult.Succeeded;
}
<section class="course-info">
    <div class="row">
        <div class="col-md-9">
            <h1>@Model.Title
                @if (canEdit)
                {
                    <a class="btn btn-outline-primary" type="button" asp-action="Edit" asp-route-id="@Model.Id"><i
                            class="fas fa-edit"></i> Modifica</a>
                }
            </h1>
        </div>
        <div class="col-md-3 d-flex align-items-end">
            @if (isSubscribed)
            {
                <span class="alert alert-secondary btn-block">Sei iscritto al corso</span>
            }
            else if (canEdit)
            {
                <span class="alert alert-secondary btn-block">Sei l'autore del corso</span>
            }
            else
            {
                <a asp-action="Pay" class="btn btn-warning btn-lg btn-block subscribe-course"
                    asp-route-id="@Model.Id">Iscriviti</a>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <p html-sanitize>@Model.Description</p>
        </div>
        <div class="col-md-3">
            <aside>
                <author>di @Model.Author</author>
                <div class="rating" title="@Model.Rating">
                    <rating value="@Model.Rating"> </rating>
                </div>
                <div class="price">
                    @Model.CurrentPrice
                    @if (!Model.CurrentPrice.Equals(Model.FullPrice))
                    {
                        <br>
                        <s>@Model.FullPrice</s>
                    }
                </div>
                <img src="@Model.ImagePath" class="img-fluid course-image" alt="@Model.Title" asp-append-version="true">
                <a asp-page="/Contact" asp-route-id="@Model.Id" class="btn btn-block btn-outline-secondary mt-3">Fai una
                    domanda</a>
                @if (isSubscribed)
                {
                    <a asp-action="Vote" asp-route-id="@Model.Id" class="btn btn-block btn-outline-secondary mt-2"
                        data-toggle="modal" data-target="#voteModal">Valuta il corso</a>
                }
            </aside>
        </div>
    </div>
</section>


<section class="course-lessons">
    <h2>Lezioni (@Model.Lessons.Count)
        @if (canEdit)
        {
            <a class="btn btn-outline-primary btn-sm" asp-controller="Lessons" asp-action="Create" asp-route-id="@Model.Id">
                <i class="fas fa-plus"></i>
                Crea nuova
            </a>
        }
    </h2>
    @foreach (var lesson in Model.Lessons)
    {
        <hr>
        <div class="row">
            <div class="col-md-9 d-flex align-items-center">
                @if (isSubscribed || canEdit)
                {
                    <a asp-controller="Lessons" asp-action="Detail" asp-route-id="@lesson.Id">@lesson.Title</a>
                }
                else
                {
                    <span>@lesson.Title</span>
                }
            </div>
            <div class="col-md-3 d-flex align-items-center justify-content-end lesson-duration">
                <i class="far fa-clock"></i>
                <time>@lesson.Duration.ToString("m'm 's's'")</time>
            </div>
            @if (canEdit)
            {
                <a class="btn btn-outline-primary btn-sm ml-3" asp-controller="Lessons" asp-action="Edit"
                    asp-route-id="@lesson.Id">
                    <i class="fas fa-pencil-alt"></i>
                </a>
            }
        </div>
    }
    <hr>
    <div class="row course-duration">
        <div class="col-md-9 d-flex align-items-center">
            Totale
        </div>
        <div class="col-md-3 d-flex justify-content-end">
            <i class="far fa-clock"></i><time> @Model.TotalCourseDuration.ToString("h'h 'm'm 's's'")</time>
        </div>
    </div>
</section>

<div class="modal fade" id="voteModal" tabindex="-1" aria-labelledby="voteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="voteModalLabel">Il tuo voto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <iframe width="100%" height="100" frameBorder="0"></iframe>
            </div>
        </div>
    </div>
</div>
<!--elemento iframe verrà caricato solo l'utente ci clicca, verrà caricata e aperta una modal (Bootstrap) -->
@section Scripts
    {
    <script>
        $('#voteModal').on('shown.bs.modal', function (event) {
            $(this).find('iframe').attr('src', event.relatedTarget.href);
        });
    </script>
}