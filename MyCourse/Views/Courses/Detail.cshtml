@model CourseDetailViewModel
<section class="course-info">
    <div class="row">
        <div class="col-md-9">
            <h1>@Model.Title <a class="btn btn-outline-primary" type="button" asp-action="Edit"
                    asp-route-id="@Model.Id"><i class="fas fa-edit"></i> Modifica</a></h1>
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <a href="#" class="btn btn-warning btn-lg btn-block subscribe-course">Iscriviti</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <p html-sanitize>@Model.Description</p>
        </div>
        <div class="col-md-3">
            <aside>
                <author>di @Model.Author</author>
                <div class="rating" title="@Model.Rating">
                    <rating value="@Model.Rating"> </rating>
                </div>
                <div class="price">
                    @Model.CurrentPrice
                    @if (!Model.CurrentPrice.Equals(Model.FullPrice))
                    {
                        <br>
                        <s>@Model.FullPrice</s>
                    }
                </div>
                <img src="@Model.ImagePath" class="img-fluid course-image" alt="@Model.Title" asp-append-version="true">
                <a asp-page="/Contact" asp-route-id="@Model.Id" class="btn btn-block btn-outline-secondary mt-3">Fai una domanda</a>
            </aside>
        </div>
    </div>
</section>


<section class="course-lessons">
    <h2>Lezioni (@Model.Lessons.Count)
        <a class="btn btn-outline-primary btn-sm" asp-controller="Lessons" asp-action="Create" asp-route-id="@Model.Id">
            <i class="fas fa-plus"></i>
            Crea nuova
        </a>
    </h2>
    @foreach (var lesson in Model.Lessons)
    {
        <hr>
        <div class="row">
            <div class="col-md-9 d-flex align-items-center">
                <a asp-controller="Lessons" asp-action="Detail" asp-route-id="@lesson.Id">@lesson.Title</a>
            </div>
            <div class="col-md-3 d-flex align-items-center justify-content-end lesson-duration">
                <i class="far fa-clock"></i>
                <time>@lesson.Duration.ToString("m'm 's's'")</time>
            </div>
            <a class="btn btn-outline-primary btn-sm ml-3" asp-controller="Lessons" asp-action="Edit"
                asp-route-id="@lesson.Id">
                <i class="fas fa-pencil-alt"></i>
            </a>
        </div>
    }
    <hr>
    <div class="row course-duration">
        <div class="col-md-9 d-flex align-items-center">
            Totale
        </div>
        <div class="col-md-3 d-flex justify-content-end">
            <i class="far fa-clock"></i><time> @Model.TotalCourseDuration.ToString("h'h 'm'm 's's'")</time>
        </div>
    </div>
</section>