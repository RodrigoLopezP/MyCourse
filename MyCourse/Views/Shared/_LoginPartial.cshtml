@inject SignInManager<ApplicationUser> signInManager
@inject UserManager<ApplicationUser> userManager

<!--Inserendo tutta la roba per la autentizazione, con NET CORE Identity viene richiesto di creare un file come questo,chiamato LoginPartial-->
@if (signInManager.IsSignedIn(User))
{
ApplicationUser appUser=await userManager.GetUserAsync(User);
     <ul class="navbar-nav">
          <li class="nav-item active">
               <a class="nav-link" asp-page="/Account/Manage/Index" asp-area="Identity">Ciao @appUser.Email!</a>
          </li>
          <li class="nav-item">
               <form class="form-inline"  method="post"  asp-page="/Account/Logout"  asp-area="Identity">
                        <button type="submit" class="btn btn-link text-white">Esci</button>
               </form>
          </li>
     </ul>
}
else
{

     <ul class="navbar-nav">
          <li class="nav-item active">
               <a class="nav-link" asp-page="/Account/Register" asp-area="Identity">Registrati</a>
          </li>
          <li class="nav-item active">
               <a class="nav-link" asp-page="/Account/Login" asp-area="Identity">Accedi </a>
          </li>
     </ul>
}
